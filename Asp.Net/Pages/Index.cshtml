@page
@model IndexModel
@{
    ViewData["Title"] = "ColorPage";
}

<div class="text-center">
    <h1 class="display-4">List of Colors</h1>
    <p><a href="https://localhost:7080">Refresh the Page</a>.</p>
</div>
<table class="table table-striped table-dark">
    <thead>
        <tr class="bg-primary text-white">
            <th>#</th>
            <th>Color Name</th>
            <th>Color hexadecimal Code</th>
            <th>     Display</th>
        </tr>
    </thead>
    <tbody>
    @{
        int counter = 0;
        foreach (var webnamecolor in Model.WebNamedColors)
        {
            <tr>
            <td>@(++counter)</td>
            <td>@webnamecolor.Color_Name</td>
            <td>@webnamecolor.Color_Hexadecimal_code</td>
            <td id="cl"><h3 style="background-color:@webnamecolor.Color_Hexadecimal_code ;">COLOR</h3></td>
            </tr>
        }
    }
    </tbody>
</table>
