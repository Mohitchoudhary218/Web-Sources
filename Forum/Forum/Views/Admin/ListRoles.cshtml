@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "All Posted Messages";
}

<table class="table table-striped table-dark table-active text-center">
    <thead>
    <th id="r1">
        All Registered Roles
    </th>
    </thead>
</table>
<table class="table table-striped table-dark table-active text-center">
    <thead>
        <tr>
            <th>
                Role ID
            </th>
            <th>
                Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in ViewData["userroles"] as List<IdentityRole>)
{
        <tr>
            <td>
                @Html.DisplayFor(m => item.Id)
            </td>
            <td>
                @Html.DisplayFor(m => item.Name)
            </td>
            <td>
                <div class="btn-group btn-sm">
                    <a asp-action="Details" asp-route-id="" class="btn btn-outline-primary">Details</a>
                    <a asp-action="Delete" asp-route-id="" class="btn btn-outline-danger">Delete</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
<p class="check">
    <a asp-action="Create" class="btn btn-outline-primary">Add New Role</a>
</p>