@model IEnumerable<Forum.Models.Post>

@{
    ViewData["Title"] = "All Posted Messages";
}

<table class="table table-striped table-dark table-active text-center">
    <thead>
    <th id="r1">
        All Posted Messages
    </th>
    </thead>
</table>
<table class="table table-striped table-dark table-active text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Topic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                Posted By
            </th>
            <th>
                Posted At
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Topic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostedAt)
                </td>
                <td>
                    <div class="btn-group btn-sm">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-success">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
