@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "All Posted Messages";
}

<table class="table table-striped table-dark table-active text-center">
    <thead>
    <th id="r1">
        All Registered Users
    </th>
    </thead>
</table>
<table class="table table-striped table-dark table-active text-center">
    <thead>
        <tr>
            <th>
                User ID
            </th>
            <th>
                Username
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewData["users"] as List<IdentityUser>)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(m => item.UserName)
                </td>
                <td>
                    <div class="btn-group btn-sm">
                        <a asp-action="Edit" asp-route-id="" class="btn btn-outline-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="" class="btn btn-outline-success">Details</a>
                        <a asp-action="Delete" asp-route-id="" class="btn btn-outline-danger"s>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />
<br />
<p class="check">
    <a asp-action="Create_User" class="btn btn-outline-primary">Add New User</a>
</p>